fanvue:
    client_id: "your_client_id"
    client_secret: "your_client_secret"
    redirect_uri: "http://localhost:8080/callback"

discord:
    token: "your_discord_bot_token"
    guild_id: 123456789012345678
    # Discord OAuth settings for auto-join feature (optional)
    # Create an OAuth2 application at https://discord.com/developers/applications
    oauth_client_id: "your_discord_oauth_client_id"
    oauth_client_secret: "your_discord_oauth_client_secret"
    oauth_redirect_uri: "http://localhost:8080/callback"
    oauth_server_host: "0.0.0.0"
    oauth_server_port: 8080

# Mapping: Fanvue Tier -> Discord Role ID
roles:
    # Subscribers
    "987654321098765432": # Role ID
        type: "subscription"
        active_subscription: true
        # on_expiry: "remove_role" (default) | "kick" | "ignore"
        on_expiry: "remove_role"

    
    # Whales
    "112233445566778899":
        type: "spending"
        min_lifetime_spend_cents: 50000

    # Example: Mixed Rules (Subscriber OR Big Spender)
    # This role is granted if EITHER condition is met.
    "123456789012345678":
        on_expiry: "remove_role"
        rules:
            - type: "subscription"
              active_subscription: true
            - type: "spending"
              min_lifetime_spend_cents: 10000

    # Top Spenders
    "998877665544332211":
        type: "top_spender"
    
    # Specific Content Unlockers
    "555555555555555555":
        type: "unlock"
        content_id: "uuid-of-the-content"
    
    # Fanvue List Members
    # Grant role to members of a Fanvue custom or smart list
    "666666666666666666":
        type: "fanvue_list"
        list_uuid: "uuid-of-fanvue-custom-list"
        list_type: "custom"  # or "smart"

# Auto-join to Guild (requires Discord OAuth)
# Users who link their Discord account via OAuth will be automatically
# added to your server when they have an active Fanvue membership.
# Similar to Patreon and Gumroad sync bots.
auto_join:
    enabled: true
    # Optional: roles to assign when user joins via auto-join
    roles:
        - "987654321098765432"

# Bidirectional List Sync
# Sync between Fanvue custom lists and Discord roles.
# Either side can be the "primary" source of truth.
list_sync:
    # Example: Fanvue list -> Discord role
    # Members of the Fanvue list get the Discord role
    vip_sync:
        discord_role_id: "111111111111111111"
        fanvue_list_uuid: "uuid-of-fanvue-vip-list"
        fanvue_list_type: "custom"  # or "smart"
        primary: "fanvue"  # Fanvue list is source of truth
    
    # Example: Discord role -> Fanvue list
    # Members with the Discord role are added to the Fanvue list
    moderators_sync:
        discord_role_id: "222222222222222222"
        fanvue_list_uuid: "uuid-of-moderators-list"
        fanvue_list_type: "custom"
        primary: "discord"  # Discord role is source of truth

# Double Upsell (Discord -> Fanvue)
upsell:
    # List of Discord SKU IDs (Entitlements) that qualify for an offer
    required_entitlement_ids:
        - "123456789012345678"
    
    # Also upsell to Server Boosters?
    upsell_on_boost: true
    
    # The message sent to the user. {link} will be replaced if we had a link generator, 
    # but for now it's just text.
    offer_message: |
        Hey there! Thanks for your support on Discord! 
        As a premium member, here is a special offer for my Fanvue page:
        https://fanvue.com/myprofile?promo=DISCORDVIP20
